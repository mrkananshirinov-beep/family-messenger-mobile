# Server Configuration
EXPO_PUBLIC_SERVER_URL=https://your-secure-server.com
EXPO_PUBLIC_SOCKET_URL=wss://your-secure-server.com

# Cloud Storage (Firebase/Supabase) - BACKEND ONLY
# Bu açarlar heç vaxt mobil app-də saxlanmır!
FIREBASE_API_KEY=your_firebase_api_key_backend_only
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_PRIVATE_KEY=-----BEGIN_PRIVATE_KEY-----\nyour_private_key\n-----END_PRIVATE_KEY-----

# Encryption Keys - BACKEND ONLY
SERVER_ENCRYPTION_KEY=your_64_character_server_encryption_key_never_in_mobile
JWT_SECRET=your_jwt_secret_key_backend_only
API_MASTER_KEY=your_api_master_key_backend_only

# Mobile App Configuration (Public keys only)
EXPO_PUBLIC_APP_ENV=production
EXPO_PUBLIC_DEBUG_MODE=false
EXPO_PUBLIC_API_VERSION=v1
EXPO_PUBLIC_MAX_FILE_SIZE=10485760
EXPO_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,video/mp4

# Rate Limiting
EXPO_PUBLIC_RATE_LIMIT_REQUESTS=10
EXPO_PUBLIC_RATE_LIMIT_WINDOW=60000

# Security Settings
EXPO_PUBLIC_SESSION_TIMEOUT=3600000
EXPO_PUBLIC_OTP_EXPIRY=300000
EXPO_PUBLIC_MAX_LOGIN_ATTEMPTS=5
